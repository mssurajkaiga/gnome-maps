jsdir = $(pkgdatadir)/js/
dist_js_DATA = \
    application.js \
    main.js \
    mainWindow.js \
    mapLocation.js \
    mapView.js \
    osrm.js \
    path.js \
    sidebar.js \
    utils.js \
    userLocation.js \
    geoclue.js

BUILT_SOURCES += \
    path.js \
    config.js

path.js: Makefile path.js.in
	$(AM_V_GEN) $(do_subst) $(srcdir)/path.js.in > $@
config.js: Makefile config.js.in
	$(AM_V_GEN) $(do_subst) $(srcdir)/config.js.in > $@

nodist_js_DATA = \
    path.js \
    config.js

CLEANFILES += \
    $(BUILT_SOURCES)

EXTRA_DIST += \
    path.js.in \
    config.js.in
